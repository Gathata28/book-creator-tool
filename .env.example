# Book Creator Tool Configuration Example
#
# This file shows all available configuration options.
# Copy this to .env and customize for your needs.

# LLM Provider Configuration
# Options: openai, anthropic
LLM_PROVIDER=openai

# API Keys
# Get your API key from https://platform.openai.com/ or https://console.anthropic.com/
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Model Selection
# OpenAI models: gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo
# Anthropic models: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
LLM_MODEL=gpt-4

# Generation Parameters
# Temperature controls randomness (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.7

# Maximum tokens per generation
LLM_MAX_TOKENS=2000

# Default Book Settings
DEFAULT_PROGRAMMING_LANGUAGE=Python
DEFAULT_TARGET_AUDIENCE=intermediate developers
DEFAULT_NUM_CHAPTERS=10

# Output Settings
DEFAULT_OUTPUT_FORMAT=html
OUTPUT_DIRECTORY=output

# Content Generation Settings
# Whether to automatically generate code examples for each section
AUTO_GENERATE_CODE_EXAMPLES=true

# Maximum number of code examples per section
MAX_CODE_EXAMPLES_PER_SECTION=3

# Whether to automatically generate exercises
AUTO_GENERATE_EXERCISES=true

# Maximum number of exercises per chapter
MAX_EXERCISES_PER_CHAPTER=5

# Editor Settings
# Automatically fix grammar issues during check
AUTO_FIX_GRAMMAR=false

# Grammar check detail level: low, medium, high
GRAMMAR_CHECK_LEVEL=medium

# Content improvement focus: clarity, engagement, conciseness, detail, examples
DEFAULT_IMPROVEMENT_FOCUS=clarity

# Export Settings
# Include table of contents in exports
INCLUDE_TOC=true

# Include code syntax highlighting in HTML/EPUB
ENABLE_SYNTAX_HIGHLIGHTING=true

# PDF page size: A4, Letter, Legal
PDF_PAGE_SIZE=A4

# HTML theme: default, dark, minimal
HTML_THEME=default

# Logging
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path
LOG_FILE=book-creator.log

# Advanced Settings
# Request timeout in seconds
API_REQUEST_TIMEOUT=60

# Number of retries for failed API calls
API_MAX_RETRIES=3

# Cache generated content to reduce API calls
ENABLE_CACHE=true

# Cache directory
CACHE_DIRECTORY=.cache
